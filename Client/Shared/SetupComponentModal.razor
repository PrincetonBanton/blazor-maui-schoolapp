@using Microsoft.AspNetCore.Components

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 1050;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@((IsEditing ? "Edit" : "Add") + " Component")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancelClicked"></button>
                </div>

                <div class="modal-body">
                    <input type="text" class="form-control mb-2" placeholder="Component Name" @bind="Name" />
                    <input type="number" class="form-control mb-2" placeholder="% of Subject" @bind="Percentage" />
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" style="width: 150px" @onclick="OnCancelClicked">Cancel</button>
                    <button class="btn @(IsEditing ? "btn-warning" : "btn-success")" style="width: 150px" @onclick="OnSaveClicked">
                        @(IsEditing ? "Update" : "Save")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public bool IsEditing { get; set; }

    // Two-way bindable parameters:
    [Parameter] public string Name { get; set; }
    [Parameter] public EventCallback<string> NameChanged { get; set; }

    [Parameter] public double Percentage { get; set; }
    [Parameter] public EventCallback<double> PercentageChanged { get; set; }

    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private async Task OnCancelClicked() => await OnCancel.InvokeAsync(null);
    private async Task OnSaveClicked() => await OnSave.InvokeAsync(null);
}
