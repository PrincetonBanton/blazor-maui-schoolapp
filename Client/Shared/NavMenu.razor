<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SchoolApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>

            <div class="nav-link dropdown-toggle" role="button" @onclick="ToggleSubjectDropdown">
                <span class="oi oi-book" aria-hidden="true"></span> Subject
            </div>
            @if (ShowSubjectDropdown)
            {
                <div class="ms-4">
                    <NavLink class="nav-link" href="/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> List
                    </NavLink>
                    <NavLink class="nav-link" href="/setup">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Setup
                    </NavLink>
@*                     <NavLink class="nav-link" href="/template">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Template
                    </NavLink> *@
                </div>
            }
        </div>
    </nav>
</div>


@code {
    private bool collapseNavMenu = true;
    private bool ShowSubjectDropdown = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleSubjectDropdown()
    {
        ShowSubjectDropdown = !ShowSubjectDropdown;
    }
}
