@page "/subject/list"
@inject HttpClient Http
@inject IJSRuntime JS
@using System.Text.Json
@using SchoolApp.Shared.Models

@if (subjects == null)
{
    <LoadingSpinner />
}
else if (!subjects.Any())
{
    <p>No subjects found.</p>
}
else
{
    <!-- Button to open modal -->
    <div class="mb-3">
        <button class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center"
                style="width: 50px; height: 50px; margin-bottom: 10px; font-size:larger" @onclick="ShowAddSubjectModal">
            + 
        </button>
    </div>

    <!-- Modal -->
    @if (ShowModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Add New Subject</h5>
                        <button type="button" class="btn-close" @onclick="HideAddSubjectModal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="text" class="form-control mb-3" placeholder="New Subject Name"
                               @bind="NewSubjectName" />
                    </div>
                    <div >
                        <button class="btn btn-secondary" style="width:150px" @onclick ="HideAddSubjectModal">Cancel</button>
                        <button class="btn btn-primary" style="width:150px" @onclick=" AddSubject">Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <table class="table table-striped">
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var subject in subjects)
            {
                <tr>
                    <td>@index</td>
                    <td>@subject.Name</td>
                    <td>
                        @if (subject.IsValidated)
                        {
                            <span class="text-success">Validated</span>
                        }
                        else
                        {
                            <span class="text-danger">Not Validated</span>
                        }
                    </td>
                    <td>
                        @if (subject.IsValidated)
                        {
                            <NavLink class="btn btn-primary btn-sm" style="width:140px; height:30px;" href="@($"/subject/template/{subject.Id}")">
                                Subject Template
                            </NavLink>
                        }
                        else
                        {
                            <NavLink class="btn btn-warning btn-sm" style="width:140px; height:30px;" href="@($"/subject/setup/{subject.Id}")">
                                Subject Setup
                            </NavLink>

                        }
                    </td>
                </tr>
                index++;
            }

        </tbody>
    </table>
}

@code {
    private List<Subject>? subjects;
    private string NewSubjectName = string.Empty;
    private bool ShowModal = false; // <-- added

    protected override async Task OnInitializedAsync()
    {
        await LoadSubjects();
    }

    private async Task LoadSubjects()
    {
        try
        {
            subjects = await Http.GetFromJsonAsync<List<Subject>>("api/subject") ?? new();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading subjects: {ex.Message}");
        }
    }

    private async Task AddSubject()
    {
        if (string.IsNullOrWhiteSpace(NewSubjectName))
        {
            await JS.InvokeVoidAsync("alert", "Subject name cannot be empty.");
            return;
        }

        if (subjects!.Any(s => s.Name.Trim().ToLower() == NewSubjectName.Trim().ToLower()))
        {
            await JS.InvokeVoidAsync("alert", "Subject already exists.");
            return;
        }

        var confirm = await JS.InvokeAsync<bool>("confirm", $"Add subject '{NewSubjectName}'?");
        if (!confirm) return;

        var newSubject = new Subject { Name = NewSubjectName };

        try
        {
            var response = await Http.PostAsJsonAsync("api/subject", newSubject);
            if (response.IsSuccessStatusCode)
            {
                NewSubjectName = string.Empty;
                await LoadSubjects();
            }
            else
            {
                var err = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to add subject: {err}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error adding subject: {ex.Message}");
        }
    }

    private void ShowAddSubjectModal() => ShowModal = true;  // <-- added
    private void HideAddSubjectModal() => ShowModal = false; // <-- added
