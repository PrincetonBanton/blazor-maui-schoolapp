@page "/itemresult/{SubGradingItemId:guid}"

@inject HttpClient Http
@inject IJSRuntime JS
@using System.Text.Json;
@using SchoolApp.Shared.Models
@inject NavigationManager NavigationManager
@inject SchoolApp.Shared.Services.SchoolContextService SchoolContext

<PageHeader 
    Title="@( $"Student Scores - {SelectedGradeLevel?.LevelName} {SelectedSchoolSection?.SectionName}" )" 
/>


@if (SubGradingItem == null)
{
    <LoadingSpinner />
}
else
{
<div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center gap-3">
        <select class="form-control" style="width: 300px;" disabled>
            <option>@SelectedSchoolYear.SchoolYearName</option>
        </select>
        <select class="form-control" style="width: 300px;" disabled>
            <option>@SelectedGradeLevel.LevelName</option>
        </select>
        <select class="form-control select-highlight" style="width: 300px;" @onchange="OnSectionChanged">
            <option disabled selected hidden>Select Section</option>
            @foreach (var ss in AllSections)
            {
                <option value="@ss.Id" selected="@(ss.Id == SelectedSchoolSection?.Id)">
                    @ss.SectionName
                </option>
            }
        </select>
    </div>
    <a href="/subject/list" title="Back to List"
        class="d-flex align-items-center justify-content-center text-white bg-primary rounded-circle shadow"
        style="width: 50px; height: 50px; text-decoration: none; font-size: 1.5rem;">
        ↩
    </a>

</div>


<div class="card shadow-sm mb-3">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div class="fw-bold fs-7 text-white">
                @Subject?.Name
                 <div>
                    <strong>Grading Period:</strong> @(
                        SubGradingItem.GradingPeriod switch {
                            1 => "1st",
                            2 => "2nd",
                            3 => "3rd",
                            4 => "4th",
                            _ => SubGradingItem.GradingPeriod.ToString()
                        }
                    )
                </div>
            </div>
                <div class="d-flex align-items-center justify-content-between fw-bold fs-7 text-white gap-3">
                    <div>
                        @Component?.Name - @Subcomponent?.Name
                    </div>
                </div>
        </div>
    </div>
</div>

 <table class="table table-bordered table-striped mt-3" style="font-size: 0.9rem;">
    <thead class="table-light">
        <tr>
            <th style="width: 5%;">#</th> 
            <th style="width: 35%;">Student Name</th>
            <th style="width: 15%;">Items</th>
            <th style="width: 15%;">Result</th>
            <th style="width: 15%;">% to Items</th>
            <th style="width: 15%;">% to Subject</th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
        }
        @foreach (var student in Students)
        {
            var score = GetScore(student.Id);
            var itemCount = SubGradingItem.ItemCount;
            var percentToItems = itemCount > 0 ? (double)score / itemCount * 100 : 0;
            var percentToSubject = percentToItems * ((Subcomponent?.Percentage ?? 0) * (Component?.Percentage ?? 0)) / 10000;

            <tr class="align-middle" style="height: 20px; line-height: 1; padding: 2px 4px;">
                <td>@index</td> 
                <td class="py-1">@($"{student.FirstName} {student.LastName}")</td>
                <td class="py-1">@itemCount</td>
                <td class="py-1">
                    <input type="number" 
                           min="0" 
                           max="@SubGradingItem.ItemCount" 
                           step="1"
                           class="form-control text-center p-0" 
                           style="height: 24px; font-size: 0.85rem;"
                           value="@(score == 0 ? SubGradingItem.ItemCount : score)"
                           @onchange="(e) => HandleScoreChange(e, student.Id)" />
                </td>
                <td class="py-1">@percentToItems</td>
                <td class="py-1">@percentToSubject</td>
            </tr>
            index++;
        }
    </tbody>
</table>


    <div class="mt-3">
        <button class="btn btn-success" @onclick="ConfirmSaveAll">Save All Scores</button>
    </div>
}

@code {
    [Parameter] public Guid SubGradingItemId { get; set; }

    private SubGradingItem? SubGradingItem;
    private Subject? Subject;
    private Component? Component;
    private Subcomponent? Subcomponent;

    private List<Student> Students = new();
    private List<SubGradingItem> SubGradingItems = new();
    private List<SubGradingScore> SubGradingScores = new();
    private List<SchoolSection> AllSections = new();

    private SchoolYear? SelectedSchoolYear;
    private GradeLevel? SelectedGradeLevel;
    private SchoolSection? SelectedSchoolSection;

    protected override async Task OnInitializedAsync()
    {
        await LoadSelectedContext();
        await LoadStudents();

        if (!await LoadSubGradingItem())
            return;

        await LoadScores();
    }

    private async Task LoadSelectedContext()
    {
        if (SchoolContext.SelectedSchoolYearId.HasValue)
            SelectedSchoolYear = await Http.GetFromJsonAsync<SchoolYear>($"api/SchoolYear/{SchoolContext.SelectedSchoolYearId}");

        if (SchoolContext.SelectedGradeLevelId.HasValue)
            SelectedGradeLevel = await Http.GetFromJsonAsync<GradeLevel>($"api/GradeLevel/{SchoolContext.SelectedGradeLevelId}");

        if (SchoolContext.SelectedSchoolSectionId.HasValue)
            SelectedSchoolSection = await Http.GetFromJsonAsync<SchoolSection>($"api/SchoolSection/{SchoolContext.SelectedSchoolSectionId}");

        if (SelectedGradeLevel != null)
        {
            AllSections = await Http.GetFromJsonAsync<List<SchoolSection>>(
                $"api/SchoolSection/ByGradeLevel/{SelectedGradeLevel.Id}"
            ) ?? new();
        }
    }

    private async Task LoadStudents()
    {
        var allStudents = await Http.GetFromJsonAsync<List<Student>>("api/student") ?? new();

        Students = SchoolContext.SelectedSchoolSectionId.HasValue
            ? allStudents.Where(s => s.SchoolSectionId == SchoolContext.SelectedSchoolSectionId.Value).ToList()
            : new List<Student>();
    }

    private async Task<bool> LoadSubGradingItem()
    {
        if (SubGradingItemId == Guid.Empty)
        {
            await JS.InvokeVoidAsync("alert", "Invalid SubjectGradingItem ID.");
            NavigationManager.NavigateTo("/");
            return false;
        }

        SubGradingItem = await Http.GetFromJsonAsync<SubGradingItem>($"api/SubGradingItem/{SubGradingItemId}");

        if (SubGradingItem == null)
        {
            await JS.InvokeVoidAsync("alert", "Subject Grading Item not found.");
            NavigationManager.NavigateTo("/");
            return false;
        }

        Subject = await Http.GetFromJsonAsync<Subject>($"api/subject/{SubGradingItem.SubjectId}");

        if (Subject != null)
        {
            Component = Subject.Components?.FirstOrDefault(c => c.Subcomponents.Any(s => s.Id == SubGradingItem.SubcomponentId));
            Subcomponent = Component?.Subcomponents.FirstOrDefault(s => s.Id == SubGradingItem.SubcomponentId);
        }

        return true;
    }

    private async Task LoadScores()
    {
        SubGradingScores = await Http.GetFromJsonAsync<List<SubGradingScore>>(
            $"api/SubGradingScore/ByItem/{SubGradingItem.Id}"
        ) ?? new List<SubGradingScore>();

        foreach (var student in Students)
        {
            if (!SubGradingScores.Any(s => s.StudentId == student.Id))
            {
                var perfect = SubGradingItem.ItemCount;
                var percentToItems = perfect > 0 ? (double)perfect / SubGradingItem.ItemCount * 100 : 0;
                var percentToSubject = percentToItems *
                    ((Subcomponent?.Percentage ?? 0) * (Component?.Percentage ?? 0)) / 10000;

                SubGradingScores.Add(new SubGradingScore
                {
                    Id = Guid.NewGuid(),
                    StudentId = student.Id,
                    SubcomponentId = SubGradingItem.SubcomponentId,
                    SubGradingItemId = SubGradingItem.Id,
                    GradingPeriod = SubGradingItem.GradingPeriod,
                    ScoreObtained = perfect,
                    PercentSubject = percentToSubject,
                    DateRecorded = DateTime.Now
                });
            }
        }
    }

    private Double GetScore(Guid studentId)
    {
        return SubGradingScores.FirstOrDefault(s => s.StudentId == studentId)?.ScoreObtained ?? 0;
    }

    private void HandleScoreChange(ChangeEventArgs e, Guid studentId)
    {
        var inputValue = e.Value?.ToString();
        OnScoreChanged(studentId, inputValue);
    }

    private async void OnScoreChanged(Guid studentId, string? score)
    {

        if (!int.TryParse(score, out int parsedScore))
        {
            SetOrUpdateStudentScore(studentId, 0);
            await JS.InvokeVoidAsync("alert", "Invalid number entered.");
            StateHasChanged();
            return;
        }

        if (SubGradingItem != null && parsedScore > SubGradingItem.ItemCount)
        {
            await JS.InvokeVoidAsync("alert", $"Score cannot be greater than {SubGradingItem.ItemCount}.");
            SetOrUpdateStudentScore(studentId, SubGradingItem.ItemCount);
        }
        else
        {
            SetOrUpdateStudentScore(studentId, parsedScore);
        }

        StateHasChanged();
    }


    private void SetOrUpdateStudentScore(Guid studentId, int score)
        {
        var existing = SubGradingScores.FirstOrDefault(s => s.StudentId == studentId);
        var itemCount = SubGradingItem?.ItemCount ?? 0;

        var percentToItems = itemCount > 0 ? (double)score / itemCount * 100 : 0;
        var percentToSubject = percentToItems * ((Subcomponent?.Percentage ?? 0) * (Component?.Percentage ?? 0)) / 10000;

        if (existing != null)
        {
            existing.ScoreObtained = score;
            existing.PercentSubject = percentToSubject; // update percent
            existing.DateRecorded = DateTime.Now;
        }
        else if (SubGradingItem != null)
        {
            SubGradingScores.Add(new SubGradingScore
            {
                StudentId = studentId,
                SubcomponentId = SubGradingItem.SubcomponentId,
                SubGradingItemId = SubGradingItem.Id,
                GradingPeriod = SubGradingItem.GradingPeriod,
                ScoreObtained = score,
                PercentSubject = percentToSubject, 
                DateRecorded = DateTime.Now
            });
        }
    }

    private async Task ConfirmSaveAll()
        {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to save all scores?");
        if (!confirmed || SubGradingItem == null)
            return;

        try
        {
            var payload = new
            {
                SubGradingItemId = SubGradingItem.Id,
                Scores = SubGradingScores
            };

            var jsonPayload = JsonSerializer.Serialize(payload, new JsonSerializerOptions { WriteIndented = true });
            await JS.InvokeVoidAsync("alert", jsonPayload); 

            var response = await Http.PostAsJsonAsync("api/SubGradingScore/DeleteAndInsertAll", payload);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Scores replaced successfully!");
                NavigationManager.NavigateTo($"/subject/template/{SubGradingItem.SubjectId}");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to save scores: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error saving scores: {ex.Message}");
        }
    }

    private async Task OnSectionChanged(ChangeEventArgs e)
    {
        if (!Guid.TryParse(e.Value?.ToString(), out var newSectionId))
            return;

        SchoolContext.UpdateSchoolSection(newSectionId);
        SelectedSchoolSection = AllSections.FirstOrDefault(s => s.Id == newSectionId);
        var allStudents = await Http.GetFromJsonAsync<List<Student>>("api/student") ?? new();

        Students = allStudents
            .Where(s => s.SchoolSectionId == newSectionId)
            .ToList();
        SubGradingScores = await Http.GetFromJsonAsync<List<SubGradingScore>>(
            $"api/SubGradingScore/ByItem/{SubGradingItem!.Id}"
        ) ?? new List<SubGradingScore>();

        // Prepopulate missing scores
        foreach (var student in Students)
        {
            if (!SubGradingScores.Any(s => s.StudentId == student.Id))
            {
                var perfectScore = SubGradingItem.ItemCount;
                var itemCount = SubGradingItem.ItemCount;

                var percentToItems = itemCount > 0 ? (double)perfectScore / itemCount * 100 : 0;
                var percentToSubject = percentToItems *
                    ((Subcomponent?.Percentage ?? 0) * (Component?.Percentage ?? 0)) / 10000;

                SubGradingScores.Add(new SubGradingScore
                {
                    Id = Guid.NewGuid(),
                    StudentId = student.Id,
                    SubcomponentId = SubGradingItem.SubcomponentId,
                    SubGradingItemId = SubGradingItem.Id,
                    GradingPeriod = SubGradingItem.GradingPeriod,
                    ScoreObtained = perfectScore,
                    PercentSubject = percentToSubject,
                    DateRecorded = DateTime.Now
                });
            }
        }
        StateHasChanged();
    }

}
