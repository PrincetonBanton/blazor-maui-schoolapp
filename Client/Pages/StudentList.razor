@page "/students/list"
@using System.Text.Json
@using SchoolApp.Shared.Models
@using SchoolApp.Client.Helpers
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav
@inject SchoolApp.Shared.Services.SchoolContextService SchoolContext

<AuthGuard>
 <PageHeader Title="Students List" OnSearch="HandleSearch" />
 <SchoolContextSelector />

    @if (!SchoolContext.SelectedSchoolYearId.HasValue ||
        !SchoolContext.SelectedGradeLevelId.HasValue ||
        !SchoolContext.SelectedSchoolSectionId.HasValue)
    {
        <div class="fade-in" @key="FadeKey">
            <NoDataLogo />
        </div>
    }
    else if (students == null)
    {
        <LoadingSpinner />
    }
    else if (!students.Any())
    {
        @if (IsSearching)
        {
            <div class="alert alert-info mt-3 text-center">
                No matching student found.
            </div>
        }
        else
        {
            <div class="alert alert-warning mt-3 d-flex justify-content-between align-items-center">
                <div>
                    Do you want to add a student for <strong>@SchoolContext.GetSelectedSchoolSectionName()</strong>?
                </div>
                <button class="btn btn-primary btn-sm" @onclick="ShowStudentModal">Yes</button>
            </div>
        }
    }
    else
    {
        <div class="col-6 mb-3">
            <button class="btn btn-primary rounded-circle" style="width: 50px; height: 50px; font-size: larger;"
                    @onclick="ShowStudentModal">
                +
            </button>
        </div>

        //Load Table List
        <div class="fade-in" @key="FadeKey">
            <table class="table table-striped align-middle">
                <tbody>
                    @if (students.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No student data to display yet.
                            </td>
                        </tr>
                    }
                    else
                    {
                        var index = 1;
                        foreach (var student in students)
                        {
                            <tr>
                                <!-- Row number -->
                                <td style="width: 5%; text-align:center;">@index</td>

                                <!-- Student picture -->
                                <td style="width: 5%; text-align:center;">
                                    <img src="id_pic.png" alt="Student Photo"
                                         class="rounded border me-3" style="width: 30px; height: 30px; object-fit: cover;" />
                                </td>

                                <!-- Student name -->
                                <td style="width: 10%;">
                                    @($"{student.LastName}, {student.FirstName} {student.MiddleName}".Trim())
                                </td>

                                <td style="width: 10%;">@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                <td style="width: 10%;">@student.Gender</td>
                                <td style="width: 10%;">@student.Address</td>
                                <td style="width: 10%;">@student.ContactNumber</td>

                                <td style="width: 30%;">
                                    <div class="d-flex justify-content-center">
                                        <div style="display:flex; gap:10px; justify-content:center;">
                                            <button title="Guardians"
                                                    style="background:none; border:none; font-size:1.3rem; cursor:pointer;"
                                                    @onclick="() => ShowParentsAlert(student)">
                                                👪
                                            </button>
                                            <button class="btn btn-primary btn-sm rounded-circle"
                                                    style="width: 28px; height: 28px; padding: 0;"
                                                    title="View Card"
                                                    @onclick="() => GoToStudentCard(student.Id)">
                                                📄
                                            </button>
                                            <button class="btn btn-warning btn-sm rounded-circle"
                                                    style="width: 28px; height: 28px; padding: 0;"
                                                    title="Edit Student"
                                                    @onclick="() => EditStudent(student)">
                                                ✏️
                                            </button>
                                            <button class="btn btn-danger btn-sm rounded-circle"
                                                    style="width: 28px; height: 28px; padding: 0;"
                                                    title="Delete Student">
                                                🗑️
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    }

    @if (ShowModal)
    {
        <div class="modal d-block" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">@((IsEditMode ? "Edit Student" : "Add Student"))</h5>
                        <button type="button" class="btn-close" @onclick="HideStudentModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <div class="alert alert-info d-flex justify-content-between align-items-center p-3 mb-3 border" style="min-height: 60px;">
                                <div>
                                    <strong>@SchoolContext.GetSelectedGradeLevelName()</strong><br />
                                    <strong>@SchoolContext.GetSelectedSchoolSectionName()</strong>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@(SchoolContext.SelectedGradeLevelId?.ToString() ?? "N/A")</small><br />
                                    <small class="text-muted">@(SchoolContext.SelectedSchoolSectionId?.ToString() ?? "N/A")</small>
                                </div>
                            </div>

                        </div>

                        <input class="form-control" placeholder="First Name" style="margin-bottom: 1rem;" @bind="NewStudent.FirstName" />
                        <input class="form-control" placeholder="Middle Name" style="margin-bottom: 1rem;" @bind="NewStudent.MiddleName" />
                        <input class="form-control" placeholder="Last Name" style="margin-bottom: 1rem;" @bind="NewStudent.LastName" />
                        <input type="date" class="form-control" style="margin-bottom: 1rem;" @bind="NewStudent.DateOfBirth" />
                        <select class="form-control" style="margin-bottom: 1rem;" @bind="NewStudent.Gender">
                            <option value="">Select Gender...</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <input class="form-control" placeholder="Address" style="margin-bottom: 1rem;" @bind="NewStudent.Address" />
                        <input class="form-control" placeholder="Contact Number" style="margin-bottom: 1rem;" @bind="NewStudent.ContactNumber" />
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-outline-primary mb-3" @onclick="AutoFillStudent">
                            Auto-Fill Student Info
                        </button>
                        <button class="btn btn-secondary" style="width:150px;" @onclick="HideStudentModal">Cancel</button>
                        <button class="btn btn-primary" style="width:150px;" @onclick="SaveStudentAsync">@(IsEditMode ? "Update" : "Save")</button>
                    </div>
                </div>
            </div>
        </div>
    }

</AuthGuard>

@code {
    private List<Student> students = new();
    private Student NewStudent = new();
    private bool ShowModal = false;
    private bool IsEditMode = false;
    private bool IsSearching = false;
    private string FadeKey =>
        $"{SchoolContext.SelectedSchoolYearId}-{SchoolContext.SelectedGradeLevelId}-{SchoolContext.SelectedSchoolSectionId}";

    protected override async Task OnInitializedAsync()
    {
        SchoolContext.OnContextChanged += OnContextChanged;
        await LoadStudents();
    }

    private async void OnContextChanged()
    {
        await LoadStudents();
        StateHasChanged();
    }

    public void Dispose()
    {
        SchoolContext.OnContextChanged -= OnContextChanged;
    }

    private async Task LoadStudents()
    {
        if (!SchoolContext.SelectedSchoolSectionId.HasValue)
        {
            students = new();
            return;
        }
        try
        {
            var allStudents = await Http.GetFromJsonAsync<List<Student>>("api/student") ?? new();

            if (SchoolContext.SelectedSchoolSectionId.HasValue)
            {
                students = allStudents
                    .Where(s => s.SchoolSectionId == SchoolContext.SelectedSchoolSectionId.Value)
                    .ToList();
            }
            else
            {
                students = new();
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading students: {ex.Message}");
        }
    }

    private void ShowStudentModal()
    {
        NewStudent = new Student
        {
            SchoolSectionId = SchoolContext.SelectedSchoolSectionId,
            GradeLevelId = SchoolContext.SelectedGradeLevelId
        };
        IsEditMode = false;
        ShowModal = true;
    }

    private void EditStudent(Student student)
    {
        NewStudent = new Student
        {
            Id = student.Id,
            FirstName = student.FirstName,
            MiddleName = student.MiddleName,
            LastName = student.LastName,
            DateOfBirth = student.DateOfBirth,
            Gender = student.Gender,
            Address = student.Address,
            ContactNumber = student.ContactNumber,
            SchoolSectionId = student.SchoolSectionId,
            GradeLevelId = student.GradeLevelId
        };

        IsEditMode = true;
        ShowModal = true;
    }


    private void HideStudentModal()
    {
        ShowModal = false;
    }

    private async Task SaveStudentAsync()
    {
        NewStudent.GradeLevelId = SchoolContext.SelectedGradeLevelId;
        NewStudent.SchoolSectionId = SchoolContext.SelectedSchoolSectionId;

        var errorMessage = StudentValidator.Validate(NewStudent);

        if (errorMessage != null)
        {
            await JS.InvokeVoidAsync("alert", errorMessage);
            return;
        }

        if (IsEditMode)
        {
            var response = await Http.PutAsJsonAsync($"api/student/{NewStudent.Id}", NewStudent);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Student updated!");
                HideStudentModal();
                await LoadStudents();
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to update student: {errorMsg}");
            }
        }
        else
        {
            var response = await Http.PostAsJsonAsync("api/student", NewStudent);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Student saved!");
                HideStudentModal();
                await LoadStudents();
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to save student: {errorMsg}");
            }
        }
    }

    private async Task ShowParentsAlert(Student student)
    {
        await JS.InvokeVoidAsync("alert", $"Parent/Guardian feature for {student.FullName} is not implemented yet.");
    }

    private string SearchKeyword = "";
    private async Task HandleSearch(string keyword)
    {
        SearchKeyword = keyword.Trim().ToLower();
        IsSearching = !string.IsNullOrWhiteSpace(SearchKeyword);
        if (string.IsNullOrWhiteSpace(SearchKeyword))
        {
            await LoadStudents(); // reload full list
            StateHasChanged();
            return;
        }

        students = students
            .Where(s => s.LastName.ToLower().Contains(SearchKeyword))
            .ToList();

        StateHasChanged();
    }

    private void AutoFillStudent()
    {
        NewStudent = StudentSeeder.GenerateRandomStudent(
            SchoolContext.SelectedGradeLevelId,
            SchoolContext.SelectedSchoolSectionId
        );
    }
    private void GoToStudentCard(Guid studentId)
    {
        Nav.NavigateTo($"/students/card/{studentId}");
    }

}
