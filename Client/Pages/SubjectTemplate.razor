@* @page "/subject/template" *@
@page "/subject/template/{SubjectId:guid}"

@inject HttpClient Http
@inject IJSRuntime JS
@using System.Text.Json
@using SchoolApp.Shared.Models
@using SchoolApp.Client.Helpers
@inject NavigationManager NavigationManager
@inject SchoolApp.Shared.Services.SchoolContextService SchoolContext

<AuthGuard>
    <PageHeader Title="Subject Template" />

    @if (Subject == null)
    {
        <LoadingSpinner />
    }
    else
    {
        <div class="d-flex align-items-center justify-content-between mb-3">
            <select class="form-control select-highlight" style="width: 300px;" @onchange="OnSubjectChanged">
                @foreach (var subject in Subjects)
                {
                    <option value="@subject.Id" selected="@(SelectedSubjectId == subject.Id)">
                        @subject.Name
                    </option>
                }
            </select>
            <a href="/subject/list" title="Subject List"
               class="d-flex align-items-center justify-content-center text-white bg-primary rounded-circle shadow"
               style="width: 50px; height: 50px; text-decoration: none; font-size: 1.5rem;">
                📑
            </a>
        </div>

        @if (Subject.Components != null && Subject.Components.Any())
        {
            <table class="table table-bordered">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="text-center align-middle" style="width: 12%;">Component</th>
                        <th class="text-center align-middle" style="width: 8%;">Subject</th>
                        <th class="text-center align-middle" style="width: 12%;">Subcomponent</th>
                        <th class="text-center align-middle" style="width: 8%;">Component</th>
                        <th class="text-center align-middle" style="width: 12%;">1st</th>
                        <th class="text-center align-middle" style="width: 12%;">2nd</th>
                        <th class="text-center align-middle" style="width: 12%;">3rd</th>
                        <th class="text-center align-middle" style="width: 12%;">4th</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var component in Subject.Components
                                .OrderBy(c =>
                                c.Name.ToLower().Contains("written") ? 0 : c.Name.ToLower().Contains("quarter") ? 99 : 50)
                                .ThenBy(c => c.Name))
                    {
                        // Get the number of subcomponents, if sub is null or none, still render 1 for the component row w/o the sub
                        int comSubCount = component.Subcomponents?.Count ?? 1;


                        for (int i = 0; i < comSubCount; i++)
                        {
                            var comSub = component.Subcomponents?.ElementAtOrDefault(i);

                            // Start a new table row for this subcomponent
                            <tr class="align-middle" style="height: 70px;">
                                @*For the first subcomponent row, display component name and percentage with rowspan *@
                                @if (i == 0)
                                {
                                    <td rowspan="@comSubCount">@component.Name</td>
                                    <td rowspan="@comSubCount">@component.Percentage %</td>
                                }

                                @if (comSub != null)
                                {
                                    <td>@comSub.Name</td>
                                    <td>@comSub.Percentage %</td>

                                    @for (int gradingPeriod = 1; gradingPeriod <= 4; gradingPeriod++)
                                    {
                                        var loopGrading = gradingPeriod;

                                        // Try to find an existing SubGradingItem for this Subject, Subcomponent, and GradingPeriod
                                        var subWithItems = SubGradingItems.SingleOrDefault(g =>
                                        g.SubjectId == SelectedSubjectId &&
                                        g.SubcomponentId == comSub.Id &&
                                        g.GradingPeriod == loopGrading);

                                        Guid? subGradingItemId = subWithItems?.Id;
                                        int subItems = subWithItems?.ItemCount ?? 0;

                                        <td style="text-align:center">
                                            @* If no items exist for this grading period, show "+" div to add new items *@
                                            @if (subItems == 0)
                                            {
                                                <div title="Add Items" class="d-inline-flex align-items-center"
                                                     style="width: 45px; height: 45px; display:flex; align-items:center; justify-content:center;
                                                                                    border:1px solid #ccc; border-radius:50%;font-size:1.5rem; cursor:pointer; background:#f7f7f7;"
                                                     @onclick="() => OpenGradeInputModal(comSub.Id, comSub.Name, loopGrading, subItems)">
                                                    +
                                                </div>

                                            }
                                            else
                                            {
                                                {
                                                    // Call search logic
                                                    ScoreSearch(subGradingItemId, loopGrading);

                                                    <div class="d-inline-flex align-items-center">
                                                        <div style="display:inline-block; border:1px solid #ccc; border-radius:4px; padding:4px 8px; margin-left:10px; min-width:130px;"
                                                             @onclick="() => OpenGradeEditModal(SelectedSubjectId.Value, comSub.Id, loopGrading, subItems, subGradingItemId)">
                                                            @subItems
                                                        </div>

                                                        @if (!HasScoreMatch)
                                                        {
                                                            <!-- Show "View Scores" button if NO existing scores -->
                                                            <button title="View Scores"
                                                                    @onclick="() => NavigateToItemResult(subGradingItemId)"
                                                                    style="background:none; border:none; color:#f4b400; font-size:2rem; cursor:pointer; padding:0; margin:0; line-height:1;">
                                                                📊
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <!-- Show "Edit Scores" button if scores already exist -->
                                                            <button title="Edit Scores"
                                                                    @onclick="() => NavigateToItemResult(subGradingItemId)"
                                                                    style="background:none; border:none; color:#f4b400; font-size:2rem; cursor:pointer; padding:0; margin:0; line-height:1;">
                                                                ✏️
                                                            </button>
                                                        }
                                                    </div>
                                                }

                                            }
                                        </td>
                                    }
                                }
                                else
                                {
                                    <td colspan="6"><em>No subcomponents</em></td>
                                }
                            </tr>
                        }
                    }

                </tbody>
            </table>

            @if (SelectedSubjectId.HasValue)
            {
                <button @onclick="ConfirmInvalidateSubject"
                        class="d-flex align-items-center justify-content-center bg-warning text-white fw-bold rounded-pill mx-auto mt-4"
                        style="width: 250px; height: 50px; font-size: 1.1rem; border: none;">
                    Invalidate Template
                </button>
            }
        }
        else
        {
            <p><em>No components found for this subject.</em></p>
        }

    }

    @if (ShowGradeInputModal)
    {
        <div class="modal d-block" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Enter Item Count</h5>
                        <button type="button" class="btn-close" aria-label="Close" @onclick="CloseGradeInputModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="itemCountInput" class="form-label">Item Count:</label>
                            <input type="number" id="itemCountInput" class="form-control" @bind-value="ModalItemCount" min="0" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" @onclick="CloseGradeInputModal">Cancel</button>
                        <button class="btn btn-primary" @onclick="HandleGradeSave">Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
</AuthGuard>

@code {
    [Parameter] 
    public Guid SubjectId { get; set; }
    private Guid? SelectedSubjectId;

    private Subject? Subject;
    private List<Subject> Subjects = new();

    private List<SubGradingItem> SubGradingItems { get; set; } = new();
    private List<SubGradingScore> SubGradingScores { get; set; } = new();

    private bool ShowGradeInputModal = false;
    private Guid ModalSubcomponentId { get; set; }
    private Guid? ModalSubGradingItemId { get; set; }
    private string ModalSubcomponentName { get; set; } = string.Empty;
    private int ModalGradingPeriod { get; set; }
    private int ModalItemCount { get; set; } 

    protected override async Task OnInitializedAsync()
    {
        await LoadSubjects();
        if (SubjectId != null && SubjectId != Guid.Empty)
        {
            SelectedSubjectId = SubjectId;
            var subject = await Http.GetFromJsonAsync<Subject>($"api/subject/{SubjectId}");
            await LoadSubjectAndItems(SubjectId);
        }
        await LoadAllScores();
    }

    private async Task LoadSubjects()
    {
        try
        {
            var allSubjects = await Http.GetFromJsonAsync<List<Subject>>("api/subject") ?? new();

            if (SchoolContext.SelectedGradeLevelId.HasValue)
            {
                Subjects = allSubjects
                    .Where(s => s.GradeLevelId == SchoolContext.SelectedGradeLevelId.Value && s.IsValidated)
                    .OrderBy(s => s.Name)     
                    .ToList();
            }
            else
            {
                Subjects = new();
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading subjects: {ex.Message}");
        }
    }

    private async Task LoadSubjectAndItems(Guid subjectId)
    {
        Subject = await Http.GetFromJsonAsync<Subject>($"api/subject/{subjectId}");
        await LoadExistingItems(subjectId);
    }

    private async Task LoadExistingItems(Guid subjectId)
    {
        SubGradingItems.Clear(); 
        try
        {
            var items = await Http.GetFromJsonAsync<List<SubGradingItem>>($"api/SubGradingItem/by-subject/{subjectId}");
            if (items != null)
            {
                SubGradingItems.AddRange(items); 
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Failed to load existing grades: {ex.Message}");
        }
    }

    private async Task LoadAllScores()
    {
        try
        {
            SubGradingScores =
                await Http.GetFromJsonAsync<List<SubGradingScore>>("api/SubGradingScore")
                ?? new();
            //var json = JsonSerializer.Serialize(SubGradingScores, new JsonSerializerOptions { WriteIndented = true });
            //JS.InvokeVoidAsync("alert", json);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Failed to load scores: {ex.Message}");
        }
    }

    private async Task OnSubjectChanged(ChangeEventArgs e)
    {
        try
        {
            var value = e?.Value?.ToString();
            if (Guid.TryParse(value, out var subjectId))
            {
                SelectedSubjectId = subjectId;
                await LoadSubjectAndItems(subjectId);
            }
            else
            {
                SelectedSubjectId = null;
                Subject = null;
                SubGradingItems.Clear();
                await JS.InvokeVoidAsync("alert", "Invalid subject selected.");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error fetching components: {ex.Message}");
        }
    }

    private void OpenGradeInputModal(Guid subcomponentId, string subcomponentName, int gradingPeriod, int currentItemCount)
    {
        ModalSubcomponentId = subcomponentId;
        ModalSubcomponentName = subcomponentName;
        ModalGradingPeriod = gradingPeriod;
        ModalItemCount = currentItemCount;
        ModalSubGradingItemId = null;
        ShowGradeInputModal = true;
    }

    private async Task OpenGradeEditModal(Guid subjectId, Guid subcomponentId, int gradingPeriod, int itemCount, Guid? subGradingItemId)
    {
        ModalSubcomponentId = subcomponentId;
        ModalSubcomponentName = "";
        ModalGradingPeriod = gradingPeriod;
        ModalItemCount = itemCount;
        ModalSubGradingItemId = subGradingItemId;      
        ShowGradeInputModal = true;                             
    }

    private void CloseGradeInputModal()
    {
        ShowGradeInputModal = false;
    }

    private async Task HandleGradeSave()
    {
        ShowGradeInputModal = false; 

        var subGradingItem = new SubGradingItem
        {
            SubjectId = SelectedSubjectId!.Value,
            SubcomponentId = ModalSubcomponentId,
            GradingPeriod = ModalGradingPeriod,
            ItemCount = ModalItemCount
        };

        try
        {
            HttpResponseMessage response;

            if (ModalSubGradingItemId.HasValue && ModalSubGradingItemId.Value != Guid.Empty)
            {
                subGradingItem.Id = ModalSubGradingItemId.Value;
                response = await Http.PutAsJsonAsync($"api/SubGradingItem/{subGradingItem.Id}", subGradingItem);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/SubGradingItem", subGradingItem);
            }

            if (response.IsSuccessStatusCode)
            {
                if (ModalSubGradingItemId.HasValue && ModalSubGradingItemId.Value != Guid.Empty)
                {
                    var existing = SubGradingItems.FirstOrDefault(sgi => sgi.Id == ModalSubGradingItemId.Value);
                    if (existing != null)
                    {
                        existing.ItemCount = subGradingItem.ItemCount;
                    }
                }
                else
                {
                    var createdItem = await response.Content.ReadFromJsonAsync<SubGradingItem>();
                    if (createdItem != null)
                    {
                        SubGradingItems.Add(createdItem);
                    }
                }

                await JS.InvokeVoidAsync("alert", "Items saved successfully!");
                StateHasChanged();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to save items: {errorContent}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error saving items: {ex.Message}");
        }
    }

    private async Task ConfirmInvalidateSubject()
    {
        if (SelectedSubjectId == null)
            return;

        bool confirmInvalidate = await JS.InvokeAsync<bool>("confirm",
            "Are you sure you want to invalidate this subject template?");
        if (!confirmInvalidate)
            return;

        bool hasItemsOrScores = SubGradingItems.Any(sgi => sgi.ItemCount > 0);

        if (hasItemsOrScores)
        {
            await JS.InvokeVoidAsync("alert", "Contact system administrator.");
            return;
        }

        var response = await Http.PutAsync($"api/subject/invalidate/{SelectedSubjectId}", null);

        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Subject template invalidated successfully.");
            await Task.Delay(800);
            NavigationManager.NavigateTo("/subject/list");
        }
        else
        {
            await JS.InvokeVoidAsync("alert", $"Failed to invalidate subject. Status: {response.StatusCode}");
        }
    }


    private bool HasScoreMatch { get; set; } = false;
    private async Task ScoreSearch(Guid? subGradingItemId, int gradingPeriod)
    {
        if (subGradingItemId == null)
            return;

        var hasMatch = SubGradingScores.Any(s =>
            s.SubGradingItemId == subGradingItemId &&
            s.GradingPeriod == gradingPeriod
        );

        HasScoreMatch = hasMatch;
    }


    private void NavigateToItemResult(Guid? subGradingItemId)
    {
        if (subGradingItemId.HasValue && subGradingItemId.Value != Guid.Empty)
        {
            NavigationManager.NavigateTo($"/itemresult/{subGradingItemId.Value}");
        }
        else
        {
            JS.InvokeVoidAsync("alert", "Cannot input results: No valid SubjectGradingItem ID found.");
        }
    }

}

