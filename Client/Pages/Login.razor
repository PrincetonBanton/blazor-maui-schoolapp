    private async Task HandleSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/login", model);

            if (!response.IsSuccessStatusCode)
            {
                var errorText = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Login failed: {errorText}");
                return;
            }

            LoginResult? result = null;

            try
            {
                result = await response.Content.ReadFromJsonAsync<LoginResult>();
            }
            catch (Exception jsonEx)
            {
                await JS.InvokeVoidAsync("alert", $"Invalid server response: {jsonEx.Message}");
                return;
            }

            if (result == null)
            {
                await JS.InvokeVoidAsync("alert", "Error: Empty response from server.");
                return;
            }

            if (!result.Success)
            {
                await JS.InvokeVoidAsync("alert", result.Message ?? "Login failed");
                return;
            }

            // Save login state
            await JS.InvokeVoidAsync("localStorage.setItem", "isLoggedIn", "true");
            await JS.InvokeVoidAsync("localStorage.setItem", "userId", result.UserId ?? "");
            await JS.InvokeVoidAsync("localStorage.setItem", "role", result.Role ?? "");

            Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Unexpected error: {ex.Message}");
        }
    }

    public class LoginResult
    {
        public bool Success { get; set; }
        public string Message { get; set; } = "";
        public string? UserId { get; set; }
        public string? Role { get; set; }
    }

    private class LoginModel
    {
        public string Username { get; set; } = "";
        public string Password { get; set; } = "";
    }

    private void GoToRegister()
    {
        Nav.NavigateTo("/register");
    }

}
